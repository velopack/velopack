{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "labels": ["renovate"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "src/lib-csharp/Velopack.csproj"
  ],
  "dependencyDashboard": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  // automatically upgrade lockfiles and automerge
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  // https://docs.renovatebot.com/key-concepts/automerge
  "packageRules": [
    // {
    //   "description": "Automerge non-major package updates",
    //   "matchUpdateTypes": ["minor", "patch"],
    //   "matchCurrentVersion": "!/^0/",
    //   "automerge": true
    // },
    {
      "groupName": "rust dependencies",
      "matchFileNames": ["**/Cargo.toml"]
    },
    {
      "groupName": "dotnet dependencies",
      "matchFileNames": ["**/*.csproj", "**/Directory.Build.props"]
    },
    {
      "groupName": "npm dependencies",
      "matchFileNames": ["**/package.json"]
    },
    {
      "groupName": "dotnet test dependencies",
      "matchFileNames": ["test/**"],
      "automerge": true
    }
  ]
}
